{% extends "base.html.twig" %}

{% block title %}Liste des recettes
{% endblock %}

{% block body %}

	<div class="container p-4">

		<h1>Cr√©ation des recettes</h1>

		{{form_start(form)}}

		<div class="form-group">
			{{form_label(form.name)}}
			{{form_widget(form.name)}}
			<small class="text-danger">{{form_errors(form.name)}}</small>
		</div>

		<div class="form-group">
			{{form_label(form.duration)}}
			{{form_widget(form.duration)}}
			<small class="text-danger">{{form_errors(form.duration)}}</small>
		</div>

		<div class="form-group">
			{{form_label(form.nbPersons)}}
			{{form_widget(form.nbPersons)}}
			<small class="text-danger">{{form_errors(form.nbPersons)}}</small>
		</div>

		<div class="form-group">
			{{form_label(form.difficulty)}}
			{{form_widget(form.difficulty)}}
			<small class="text-danger">{{form_errors(form.difficulty)}}</small>
		</div>

		<div class="form-group">
			{{form_label(form.description)}}
			{{form_widget(form.description)}}
			<small class="text-danger">{{form_errors(form.description)}}</small>
		</div>

		<div class="form-group">
			{{form_label(form.price)}}
			{{form_widget(form.price)}}
			{{form_errors(form.price)}}
		</div>

		<div class="form-image">
			{{form_row(form.imageFile)}}
		</div>

		{{form_end(form)}}
	</div>

{% endblock %}
