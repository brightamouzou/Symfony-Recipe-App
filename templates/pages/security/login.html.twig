{% extends 'base.html.twig' %}

{% block title %}Page de connexion!{% endblock %}


{% block body %}
    <div class="container p-4">


        <h1 class"mb-3">Formulaire de connexion</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
            {% endfor %}

        
        {% if error %}
            <div class="alert alert-danger mt-4">
                {{error.messageKey|trans(error.messageData, 'security')}}
            </div>
        {% endif %}




        <form action="{{path("security.login")}}" method='POST'>

            <div class="form-group mb-2">
                <label for="username">Adreese email</label>
                <input type="email" value='{{last_username}}' class="form-control" id="username", name="_username" aria-describedby="emailHelp" placeholder="xyz@test.com">
            </div>
            <div class="form-group mb-2">

                <label for="password">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="_password" placeholder="*********">
            </div>

<button class="btn btn-primary mt-4" type="submit">Se connecter</button>
        </form>
    </div>
{% endblock %} 